<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="stageId"
            type="String" />
        <variable
            name="stageBooyahData"
            type="com.thisalv.booyah.BooyahEntry" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stageLayout"
        android:layout_width="match_parent"
        android:layout_height="160dp">


        <com.thisalv.getrange.AllBooyahRangesView
            android:id="@+id/allBooyahRangesView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/stageIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@{stageId.toUpperCase()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.113" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>